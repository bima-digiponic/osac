<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentBlack_50"
        android:gravity="center"
        android:translationZ="10dp"
        android:visibility="gone">

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_bar"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            app:spb_color="@color/colorPrimary"
            app:spb_mirror_mode="false"
            app:spb_progressiveStart_activated="true"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            app:spb_reversed="false"
            app:spb_sections_count="4"
            app:spb_speed="2.0"
            app:spb_stroke_separator_length="4dp"
            app:spb_stroke_width="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_btnBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn_smallCar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Mobil\nKecil"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/btn_mediumCar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Mobil\nSedang"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/btn_largeCar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Mobil\nBesar"
            android:textColor="@color/White" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/layout_btnBar"
        app:layout_constraintRight_toLeftOf="@id/divider_invoice">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="ONE STOP AUTO CARE"
                android:textColor="@color/White"
                android:textSize="36sp" />

            <Spinner
                android:id="@+id/spinner_filterType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/White"></Spinner>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider_invoice"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/Grey"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/layout_menu"
        app:layout_constraintRight_toLeftOf="@id/layout_invoice">


    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_invoice"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="243dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="OSAC"
            android:textAlignment="center"
            android:textSize="32sp" />

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/textView_invoice"></LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/btn_checkout"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Tanggal "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/btn_checkout"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toTopOf="@id/btn_checkout"
                    android:gravity="end" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/date_layout"
                android:id="@+id/rv_invoiceItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <ImageView
                android:id="@+id/img_emptyCart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/empty_cart" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_checkout"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:text="Lanjutkan"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/btn_checkout">

            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Total "
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/btn_checkout"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/total_textview_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toTopOf="@id/btn_checkout"
                android:gravity="end" />

        </LinearLayout>



    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>