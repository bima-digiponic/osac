<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="275dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_itemMenu"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/img_itemImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/empty_cart"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/text_itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_itemImg"
                android:textSize="24sp"
                android:text="Nama Jasa"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/text_itemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_itemName"
                android:textSize="18sp"
                android:text="Rp. 1000"
                android:padding="3dp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>